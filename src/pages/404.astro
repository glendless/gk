---
// main layout
import BaseLayout from "@layouts/BaseLayout.astro";

// components
import Button from "@components/Button/Button.astro";
---

<BaseLayout title="404" description="Error 404 page not found." noindex={true}>
  <section class="site-container pt-36 text-center md:pt-44">
    <div class="mx-auto max-w-xl px-4 text-center">
      <h1 class="h1">Tidak ditemukan!</h1>
      <p class="description mt-4">
        Ooopss. Mohon maaf, salah satu tautan kami mungkin rusak. Silakan coba lagi atau kembali ke beranda.
      </p>
      <div class="mt-8 flex justify-center">
        <Button variant="primary" href="/">Beranda</Button>
      </div>
    </div>
  </section>
</BaseLayout>
