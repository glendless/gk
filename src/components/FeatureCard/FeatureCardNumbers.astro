---
/**
 * * These are cards with a large number, and description below
 */

interface Props {
  largeText: string;
  medText?: string;
  description: string;
  rest?: any; // catch-all for any additional parameters, such as "aria-label"
}

const { medText,largeText, description, ...rest } = Astro.props as Props;
---

<div {...rest} class="flex flex-col gap-3 text-center">
  <h2 class="font-decorative text-[8rem] leading-none text-primary-500">
    {largeText} <span class="text-[4rem]">{medText}</span>
  </h2>

  <p class="description pr-2 font-heading-1 text-2xl">
    {description}
  </p>
</div>
